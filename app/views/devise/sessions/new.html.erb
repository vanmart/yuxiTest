  <div class="col-md-6 col-xs-12 col-sm-10 col-sm-offset-1 col-md-offset-3  forms__border">
    <h1 style="color: yellow">Iniciar sesion</h1>
    <hr>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="form-group">
      <%= f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "Enter Email",:required => "required" %>
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>


    <div class="form-group">
      <%= f.password_field :password, autocomplete: "off", :class => 'form-control', :placeholder => "Password",:required => "required" %>
      <small id="emailHelp" class="form-text text-muted">Do not share your password.</small>
    </div>

    <div class="actions">
      <%= button_tag "Enter", :type => "submit", class: "login__button" do %>
        Entrar <%= fa_icon "sign-in"%>
      <%end%>
    </div>


    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, :style => "color: white"%>
      </div>
    <% end -%>

    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "Sign up", new_registration_path(resource_name) %> |
    <% end -%>

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
    <% end -%>

  <% end %>
  </div>






