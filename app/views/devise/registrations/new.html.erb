 <div class="col-md-6 col-xs-12 col-sm-10 col-sm-offset-1 col-md-offset-3  forms__border">
  <h1 style="color: yellow">Sign up</h1>
  <hr>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "Enter Email", :required => "required" %>
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>

    <div class="form-group">
      <%= f.password_field :password, autocomplete: "off", :class => 'form-control', :placeholder => "Password",:required => "required"  %>
      <small id="emailHelp" class="form-text text-muted">Do not share your password. 6 characters minimun</small>
    </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control', :placeholder => "Confirm Password", :required => "required"  %>
  </div>
  <hr>

  <div class="actions">
    <%= f.submit "Sign up" ,:class => "login__button" %>
  </div>
  <div class="actions">
    <%= link_to "Cancel", root_path(resource_name),:class => "login__button" %><br />

  </div>
<% end %>

</div>